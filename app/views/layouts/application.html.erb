<!DOCTYPE html>
<html>
  <head>
    <title>ReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-container">
        <div class="header-logo">
          <% if @current_user %>
            <h1><%= link_to("REVIEW APP", reviews_path) %></h1>
          <% else %>
            <h1><%= link_to("REVIEW APP", "/") %></h1>
          <% end %>
        </div>
        <ul class="header-menus">
          <% if @current_user %>
            <li><%= link_to(@current_user.name, user_path(@current_user.id)) %></li>
            <li><%= link_to("レビューリスト", reviews_path) %></li>
            <li><%= link_to("ユーザリスト", users_path) %></li>
            <li><%= link_to("レビューする", new_review_path) %></li>
            <li><%= link_to("ログアウト", "/logout", {method: :post}) %></li>
          <% else %>
            <li><%= link_to("REVIEW APPとは", "/about")%></li>
            <li><%= link_to("新規登録", new_user_path) %></li>
            <li><%= link_to("ログイン", "/login") %></li>
          <% end %>
        </ul>
      </div>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
