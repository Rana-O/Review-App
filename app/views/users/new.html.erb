<style>
  .users-new .form-heading {
    text-align: center;
    margin-bottom: 50px;
  }
  .users-new .form-body {
    text-align: center;
  }
  .users-new .form-body input {
    margin-bottom: 20px;
    border: 1px solid rgb(216, 218, 223);
  }
  .users-new .form-body .user-new-input {
    display: block;
    margin: 20px auto;
    background-color: #ee8070;
    color: white;
    cursor: pointer;
    width: 120px;
    height: 45px;
    border: none;
  }
</style>

<div class="main users-new">
  <div class="container">
    <div class="form-heading">
      <h1>新規ユーザ登録</h1>
    </div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_for @user do |f| %>
          <p>ユーザ名</p>
          <%= f.text_field :name %>
          <p>メールアドレス</p>
          <%= f.text_field :email %>
          <p>パスワード</p>
          <%= f.text_field :password %>
          <%= f.submit '新規登録', class: "user-new-input" %>
        <% end %>
      </div>
    </div>
  </div>
</div>