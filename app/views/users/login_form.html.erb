<style>
  .users-login .form-heading {
    text-align: center;
    margin-bottom: 50px;
  }
  .users-login .form-body {
    text-align: center;
  }
  .users-login .form-body input {
    margin-bottom: 20px;
    border: 1px solid rgb(216, 218, 223);
  }
  .users-login .form-body .user-login-input {
    display: block;
    margin: 20px auto;
    background-color: #ee8070;
    color: white;
    cursor: pointer;
    width: 120px;
    height: 45px;
    border: none;
  }
</style>

<div class="main users-login">
  <div class="container">
    <div class="form-heading">
      <h1>ログイン</h1>
    </div>
    <div class="form users-form">
      <div class="form-body">
        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email">
          <p>パスワード</p>
          <input name="password" type="password">
          <input class="user-login-input" type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>