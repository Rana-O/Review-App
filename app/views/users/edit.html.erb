<style>
  .users-edit .form-heading {
    text-align: center;
    margin-bottom: 50px;
  }
  .users-edit .form-body {
    text-align: center;
  }
  .users-edit .form-body input {
    margin-bottom: 20px;
    border: 1px solid rgb(216, 218, 223);
  }
  .users-edit .form-body .user-edit-input {
    display: block;
    margin: 0 auto;
    background-color: #ee8070;
    color: white;
    cursor: pointer;
    width: 120px;
    height: 45px;
    border: none;
}
</style>

<div class="main users-edit">
  <div class="container">
    <div class="form-heading">
      <h1>ユーザ情報の編集</h1>
    </div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_tag(user_path, method: :put) do %>
          <p>ユーザー名</p>
          <input name="name" value="<%= @user.name %>">
          <p>メールアドレス</p>
          <input name="email" value="<%= @user.email %>">
          <input class="user-edit-input" type="submit" value="保存">
        <% end %>
          </div>
    </div>
  </div>
</div>