<style>
  .reviews-index .review-index-item {
    padding: 20px 30px;
    margin: 20px 50px;
    overflow: hidden;
    box-shadow: 0 2px 6px #c1ced7;
  }
  .reviews-index .review-index-item a {
    display: block;
    width: inherit;
  }
</style>

<div class="main reviews-index">
  <div class="container">
    <% @reviews.each do |review| %>
      <div class="review-index-item">
        <%= link_to(review.others, review_path(review)) %>
      </div>
    <% end %>
  </div>
</div>