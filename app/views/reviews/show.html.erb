<style>
  .reviews-show .review-show-item {
    padding: 20px 30px;
    margin: 20px 50px;
    overflow: hidden;
    box-shadow: 0 2px 6px #c1ced7;
  }
  .reviews-show .review-show-item .review-user-name {
    font-size: 30px;
    color: #ee8070;
  }
  .reviews-show .review-show-item .review-body {
    color: black;
    font-size: 20px;
    margin: 20px 0;
  }
  .reviews-show .review-show-item .review-menus {
    display: flex;
    justify-content: space-between;
  }
  .reviews-show .review-show-item .review-menus .edit-bar a {
    color: #8899a6;
    text-decoration: underline;
    margin: 0 10px;
  }
  .reviews-show .review-show-item .review-menus .like .fa{
    font-size: 25px;
  }
  .reviews-show .review-show-item .review-menus .like .like-btn-unlike {
    color: #E54932;
  }
.reviews-show .review-show-item .review-menus .like .like-btn {
  color: #8899a6;
}

</style>

<div class="main reviews-show">
  <div class="container">
    <div class="review-show-item">
      <div class="review-user-name">
        <%= link_to(user_path(@user)) do %>
          <p><%= @user.name %></p>
        <% end %>
      </div>
      <div class="review-body">
        <p>
          <%= @review.others %>
        </p>
      </div>
      <div class="review-time">
        <p>
          <%= @review.created_at %>
        </p>
      </div>
      <div class="review-menus">
        <div class="like">
          <% if @already_liked %>
            <%= link_to(like_path, method: :delete) do %>
              <span class="fa fa-heart like-btn-unlike"></span>
            <% end %>
          <% else %>
            <%= link_to(likes_path(review_id: @review.id), method: :post) do %>
              <span class="fa fa-heart like-btn"></span>
            <% end %>
          <% end %>
        </div>
        <div class="edit-bar">
          <% if @review.user_id == @current_user.id %>
            <%= link_to("編集", edit_review_path) %>
            <%= link_to("削除", review_path, method: :delete, data: {confirm: "レビューを削除しますか？"}) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>